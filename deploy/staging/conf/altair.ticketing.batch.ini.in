[app:main]
use = config:altair.ticketing.admin.ini#ticketing

; Beaker
session.type = ${altair:beaker_backend_type}
cache.type = ${altair:beaker_backend_type}

; altair.httpsession
altair.httpsession.persistence.type = ${altair:beaker_backend_type}

; augus
mail.augus.recipient = dev@ticketstar.jp

[loggers]
keys = root, ticketing

[handlers]
keys = rotate, stderr, spool

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = rotate, spool

[logger_ticketing]
level = DEBUG
handlers = rotate, spool
qualname = altair.app.ticketing
propagate = 0

[handler_rotate]
class = logging.handlers.RotatingFileHandler
args = ("${buildout:directory}/log/%s.log" % os.path.basename(sys.argv[0]),)
level = NOTSET
formatter = generic

[handler_fluent]
class = fluent.handler.FluentHandler
args = ('altair.ticketing.batch.%s' % os.path.basename(sys.argv[0]), '127.0.0.1', 24224)
level = NOTSET
formatter = generic

[handler_stderr]
class = logging.StreamHandler
args = (None, )
level = ${altair:console_loglevel}
formatter = generic

[handler_spool]
class = altair.log.handlers.SpoolingHandler
args = (5000, WARN)
level = INFO
target = stderr
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s

# End logging configuration
