[DEFAULT]
www_check_docroot = %(here)s/../var/www-check/altair.ticketing.orderreview

sqlalchemy.url = ${altair:ticketing.db_url.master}
altair.sqlahelper.sessions.slave.url = ${altair:ticketing.db_url.slave}
altair.sqlahelper.sessions.famiport.url = ${altair:famiport.db_url.master}

[app:orderreview]
use = config:%(here)s/../../baseconf/common.ini#orderreview
pyramid.includes = pyramid_tm pyramid_fanstatic pyramid_mailer altair_gaq altair.findable_label altair.app.ticketing.orderreview.dummy altair.auth

get sqlalchemy.url = sqlalchemy.url
get altair.sqlahelper.sessions.slave.url = altair.sqlahelper.sessions.slave.url
get altair.sqlahelper.sessions.famiport.url = altair.sqlahelper.sessions.famiport.url

; altair.rakuten_auth
altair.rakuten_auth.url_builder_factory = altair.app.ticketing.security.RakutenAuthURLBuilder
altair.rakuten_auth.url_builder_factory.proxy_url_pattern = ${altair:rakuten_auth.proxy_url_base}/{subdomain}
altair.rakuten_auth.session = ${altair:httpsession_persistence_backend_type}
altair.rakuten_auth.session.type = ${altair:beaker_backend_type}
altair.rakuten_auth.session.data_dir = %(here)s/tmp/beaker/altair.rakuten_auth/data
altair.rakuten_auth.session.lock_dir = %(here)s/tmp/beaker/altair.rakuten_auth/lock
altair.rakuten_auth.oauth.consumer_key = ${altair:rakuten_auth.oauth.consumer_key}
altair.rakuten_auth.oauth.secret = ${altair:rakuten_auth.oauth.secret}

; altair:site-data
altair.site_data.base_url = s3://tstar-dev/venue-layouts/frontend/

; orion
orion.create_url = http://orion-dev.eventgate.jp/ticket_api/create
orion.search_url = http://orion-dev.eventgate.jp/ticket_api/search

; Beaker
session.type = ${altair:beaker_backend_type}
session.data_dir = %(here)s/tmp/beaker/altair.app.ticketing.orderreview/data
session.lock_dir = %(here)s/tmp/beaker/altair.app.ticketing.orderreview/lock

cache.type = ${altair:beaker_backend_type}
cache.data_dir = %(here)s/tmp/beaker/altair.app.ticketing.orderreview/data
cache.lock_dir = %(here)s/tmp/beaker/altair.app.ticketing.orderreview/lock

; altair.httpsession
altair.httpsession.persistence = ${altair:httpsession_persistence_backend_type}
altair.httpsession.persistence.type = ${altair:beaker_backend_type}
altair.httpsession.persistence.data_dir = %(here)s/tmp/beaker/altair.app.ticketing.orderreview/data
altair.httpsession.persistence.lock_dir = %(here)s/tmp/beaker/altair.app.ticketing.orderreview/lock
altair.httpsession.http_backend = altair.mobile.session.http_backend_factory
altair.httpsession.http_backend.query_string_key = JSESSIONID

[app:www-check]
use = egg:Paste#static
document_root = %(www_check_docroot)s

[filter:prefix]
use = egg:PasteDeploy#prefix
prefix = /orderreview/

[filter:browserid]
use = egg:altair.browserid#browserid
cookie_name = browserid
env_key = repoze.browserid

[pipeline:pipeline]
pipeline =
    prefix
    browserid
    orderreview

[composite:main]
use = egg:Paste#urlmap
/ = pipeline
/.www-check = www-check

[server:main]
use  = egg:gunicorn#main
host = 0.0.0.0
port = %(http_port)s
workers = 1
timeout = 180
graceful_timeout = 180

# Begin logging configuration

[loggers]
keys = root, altair, ticketing, sqlalchemy

[handlers]
keys = console, fluent, sqlalchemy

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console, fluent

[logger_altair]
level = DEBUG
handlers = console, fluent
qualname = altair
propagate = 0

[logger_ticketing]
level = DEBUG
handlers = console, fluent
qualname = altair.app.ticketing
propagate = 0

[logger_sqlalchemy]
level = INFO
handlers = sqlalchemy
qualname = sqlalchemy.engine
propagate = 0

[handler_console]
class = altair.log.filters.BrowserIdStreamHandler
args = (sys.stderr,)
level = ${altair:console_loglevel}
formatter = generic

[handler_sqlalchemy]
class = altair.log.filters.BrowserIdTimedRotatingFileHandler
args = ('%(here)s/../log/altair.ticketing.sqlalchemy.log', 'D',)
level = INFO
formatter = generic

[handler_fluent]
class = altair.log.filters.BrowserIdFluentHandler
args = ('altair.ticketing.orderreview', '127.0.0.1', 24224, 3.0, False, 'utf-8', None, ['environ', 'params', 'session'])
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(browserid)s %(url)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s

# End logging configuration
