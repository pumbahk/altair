<Application x:Class="QR.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:control="clr-namespace:QR.presentation.gui.control"
             xmlns:c="clr-namespace:QR.presentation.gui.control"
             xmlns:WpfKb="clr-namespace:WpfKb.Controls;assembly=WpfKb"
             Startup="App_Startup"
             DispatcherUnhandledException="App_DispatcherUnhandledException"
             StartupUri="presentation/gui/HomeWIndow.xaml">
             <!-- StartupUri="presentation/gui/MainWindow.xaml"> -->
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- data template-->
            
            <!-- プリンターの設定-->
            <DataTemplate x:Key="InstalledPrinterListBoxData">
                <WrapPanel>
                    <TextBlock Style="{StaticResource SubText}" Text="{Binding FullName, Mode=OneTime}"/>
                </WrapPanel>
            </DataTemplate>
            
            <!-- ウインドウの表示方法の設定-->
            <DataTemplate x:Key="AvailableWIndowStyleListBoxData">
                <WrapPanel>
                    <TextBlock Style="{StaticResource SubText}" Text="{Binding Key, Mode=OneTime}"/>
                </WrapPanel>
            </DataTemplate>

            <c:KeyPadPopupContext x:Key="KeyPadContextPassword" PreviewType="password"/>
            <c:KeyPadPopupContext x:Key="KeyPadContextRaw" PreviewType="raw"/>
            
            <c:AlnumPad x:Key="VirtualInputKeyboard"/>
            <!-- <c:AlnumPad x:Key="VirtualInputKeyboard"/> -->
            <!-- <WpfKb:AlnumPad x:Key="VirtualInputKeyboard"/> -->

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource/Base.xaml"/>
                <ResourceDictionary Source="Resource/RT.Layout.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>