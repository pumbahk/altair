<Application x:Class="QR.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:control="clr-namespace:QR.presentation.gui.control"
             xmlns:c="clr-namespace:QR.presentation.gui.control"
             Startup="App_Startup"
             DispatcherUnhandledException="App_DispatcherUnhandledException"
             StartupUri="presentation/gui/page/MainWindow.xaml">
    
    <Application.Resources>
        <!-- data template-->
        <DataTemplate x:Key="InstalledPrinterListBoxData">
            <WrapPanel>
                <TextBlock Style="{Binding Subtext}" Text="{Binding FullName, Mode=OneTIme}"></TextBlock>
            </WrapPanel>
        </DataTemplate>


        <!-- base-->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
        
        <Style TargetType="c:KeyPad" x:Key="UserKeyPad">
            <Setter Property="Width" Value="546"/> <!--0.4-->
            <Setter Property="Height" Value="460"></Setter> <!-- 0.6-->
            
        </Style>
        
        <Style TargetType="TextBlock" x:Key="SubText">
            <Setter Property="FontSize" Value="14" />
        </Style>
            
        <Style TargetType="TextBlock" x:Key="CaseInspectName">
            <Setter Property="Background" Value="AliceBlue"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="ErrorMessageForUser">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
            <Setter Property="Background" Value="Crimson"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="CaseDescription">
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
        
        <!-- size-->
        <Style TargetType="NavigationWindow" x:Key="MainWindow">
            <Setter Property="Height" Value="768"></Setter>
            <Setter Property="Width" Value="1366"></Setter>
            <Setter Property="WindowStyle" Value="None"></Setter>
            <Setter Property="ResizeMode" Value="NoResize"></Setter>  
            <Setter Property="WindowState" Value="Maximized"></Setter>
        </Style>
        
        <Style TargetType="Page" x:Key="KioskPage">           
        </Style>
        
        <Style TargetType="Grid" x:Key="ToplevelGrid">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Resource/background.png"></ImageBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="Grid" x:Key="CenterContentGrid">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter> 
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Width" Value="820"></Setter> <!-- 60%-->
            <Setter Property="Height" Value="538"></Setter> <!-- 70% -->
        </Style>

        <Style TargetType="Image" x:Key="MainImageStyle">
            <Setter Property="MaxWidth" Value="820"></Setter>
            <!-- 60%-->
            <Setter Property="MaxHeight" Value="820"></Setter>
            <!-- 70% -->
        </Style>

        
        <Style TargetType="Button" x:Key="SubmitButtonStyle">
        </Style>


        <!-- 個別の設定-->
        <Style TargetType="Image" BasedOn="{StaticResource MainImageStyle}" x:Key="AdImageStyle">

        </Style>
        
        <Style TargetType="Image" BasedOn="{StaticResource MainImageStyle}" x:Key="PrintingImageStyle">
        </Style>
        

    </Application.Resources>
</Application>