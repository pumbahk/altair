<Application x:Class="QR.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Startup="App_Startup"
             DispatcherUnhandledException="App_DispatcherUnhandledException"
             StartupUri="presentation/gui/page/MainWindow.xaml">
    
    <Application.Resources>
        <!-- base-->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="CaseInspectName">
            <Setter Property="Background" Value="AliceBlue"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="ErrorMessageForUser">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
            <Setter Property="Background" Value="Crimson"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ErrorMessage}" Value="">
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="CaseDescription">
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
        
        <!-- size-->
        <Style TargetType="NavigationWindow" x:Key="MainWindow">
            <Setter Property="Height" Value="480"></Setter>
            <Setter Property="Width" Value="640"></Setter>
        </Style>
        
        <Style TargetType="Page" x:Key="KioskPage">           
        </Style>
        
        <Style TargetType="Grid" x:Key="ToplevelGrid">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Resource/background.png"></ImageBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="Grid" x:Key="CenterContentGrid">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter> 
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Width" Value="384"></Setter> <!-- 60%-->
            <Setter Property="Height" Value="336"></Setter> <!-- 70% -->
        </Style>

        <Style TargetType="Image" x:Key="MainImageStyle">
            <Setter Property="MaxWidth" Value="384"></Setter>
            <!-- 60%-->
            <Setter Property="MaxHeight" Value="336"></Setter>
            <!-- 70% -->
        </Style>
        
        
        <!-- 個別の設定-->
        <Style TargetType="Image" BasedOn="{StaticResource MainImageStyle}" x:Key="AdImageStyle">

        </Style>
        
        <Style TargetType="Image" BasedOn="{StaticResource MainImageStyle}" x:Key="PrintingImageStyle">
        </Style>
        

    </Application.Resources>
</Application>