<UserControl x:Class="QR.presentation.gui.control.KeyPad"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:c="clr-namespace:QR.presentation.gui.control"
       x:Name="KeyPadControl"    
       mc:Ignorable="d" 
       d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="KeyPadDebugPanel">
            <Style.Triggers>
                <DataTrigger Binding="{Binding EnableDebug}" Value="True">
                    <Setter Property="Visibility" Value="Hidden"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <UserControl.ContentTemplate>
        <DataTemplate>
            <Grid x:Name="baseContainer">
                <Grid.DataContext>
                    <c:KeyPadPopupContext/>
                </Grid.DataContext>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="5*"></RowDefinition>
                </Grid.RowDefinitions>
                <WrapPanel Grid.Row="0">
                    <WrapPanel.Style>
                        <Style TargetType="WrapPanel">
                            <Style.Resources>
                                <LinearGradientBrush x:Key="InputFollowBrush">
                                    <GradientStop Color="lightGray" Offset="1.0"/>
                                    <GradientStop Color="Gray" Offset="0.9"/>
                                    <GradientStop Color="black" Offset="0.4"/>
                                </LinearGradientBrush>
                            </Style.Resources>
                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="{StaticResource InputFollowBrush}"/>
                        </Style>                        
                    </WrapPanel.Style>
                    <TextBox x:Name="KeyPad_InputString" Width="0" Height="0"
                     Text="{Binding InputString, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"                     
                     KeyDown="OnKeyDownHandler"
                     FocusManager.FocusedElement="{Binding ElementName=KeyPad_InputString}"
                             ></TextBox>
                    <TextBlock Style="{StaticResource KeyPadDebugPanel}">入力された文字列</TextBlock>
                    <TextBlock Style="{StaticResource KeyPadDebugPanel}" Text="{Binding InputString, Mode=OneWay}"></TextBlock>
                </WrapPanel>
                <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="LightGray"
            Padding="10"
            CornerRadius="0, 10, 10, 10"
            >
                    <ContentPresenter Content="{TemplateBinding Content}"></ContentPresenter>
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.ContentTemplate>
</UserControl>
