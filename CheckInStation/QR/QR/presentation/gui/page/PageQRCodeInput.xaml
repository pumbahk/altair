<Page x:Class="QR.presentation.gui.page.PageQRCodeInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:control="clr-namespace:QR.presentation.gui.control"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="640"
    ShowsNavigationUI="False"
	Title="PageQRCodeInput"
    Loaded="OnLoaded">
    <Grid Style="{StaticResource ToplevelGrid}">
        <Grid Style="{StaticResource CenterContentGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <control:InspectCase></control:InspectCase>
            </StackPanel>
            <TextBlock Grid.Row="1">QRCode</TextBlock>
            <TextBox Grid.Row="2" Text="{Binding Mode=OneWayToSource, Path=QRCode}"></TextBox>
            <Button Grid.Row="3" Click="OnSubmitWithBoundContext">QRCode読み込み</Button>

            <Button Grid.Row="4" Click="OnBackwardWithBoundContext">戻る</Button>
        </Grid>
    </Grid>
</Page>
