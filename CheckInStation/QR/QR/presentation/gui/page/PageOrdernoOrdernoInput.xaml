<Page x:Class="QR.presentation.gui.page.PageOrdernoOrdernoInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:control="clr-namespace:QR.presentation.gui.control"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="50"
    ShowsNavigationUI="False"
	Title="PageOrdernoOrdernoInput"
    Loaded="OnLoaded">
    <Grid Style="{StaticResource ToplevelGrid}">
        <Grid Style="{StaticResource CenterContentGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <control:InspectCase Grid.Row="0"></control:InspectCase>
            <StackPanel Grid.Row="1">
                <TextBlock>ここにUI</TextBlock>
                <TextBox Text="{Binding Orderno, Mode=OneWayToSource}"></TextBox>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Button Click="OnSubmitWithBoundContext">進む</Button>
                <Button Click="OnBackwardWithBoundContext">戻る</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
