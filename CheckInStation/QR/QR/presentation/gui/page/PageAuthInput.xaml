<Page x:Class="QR.presentation.gui.page.PageAuthInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:control="clr-namespace:QR.presentation.gui.control"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="PageAuthInput"
    Loaded="OnLoaded">

            <StackPanel>
            <control:InspectCase/>
            <TextBlock>Login name:</TextBlock>
            <TextBox Text="{Binding LoginName, Mode=OneWayToSource}"></TextBox>
            <TextBlock>Password:</TextBlock>
            <PasswordBox Name="PasswordInput"></PasswordBox>
            <Button Click="OnSubmitWithBoundContext">login</Button>
        </StackPanel>

</Page>
