## heading widget dialog
##  view function is views.HeadingWidgetView.dialog
##
<%namespace file="../components.mako" name="co"/>

<div class="title">
  <h1>見出し　widget</h1>
</div>

<button type="button" id="insert_button">ページ名を挿入</button>
<script type="text/javascript">
  $("#insert_button").click(function(){
    $.getJSON("${request.route_path("api_heading_title")}", {"page": get_page()}).done(
      function(data){
        if(!!data.name){
          $('#dialog_table input[name="text"]').val(data.name);
        }
      }); 
    });
</script>

<table class="table" id="dialog_table">
  <tbody>
    ${co.formfield(form, "kind")}
    ${co.formfield(form, "text")}
  </tbody>
</table>
<button type="button" id="heading_submit">登録</button>
