        "/performances/{performance_id}/stock_types/{stock_type_id}": {
            "get": {
                "summary": "Stock type",
                "description": "return a specific stock type\n",
                "parameters": [
                    {
                        "name": "performance_id",
                        "in": "path",
                        "description": "performance id",
                        "required": true,
                        "type": "integer",
                        "format": "int32",
                        "x-example": 28677
                    },
                    {
                        "name": "stock_type_id",
                        "in": "path",
