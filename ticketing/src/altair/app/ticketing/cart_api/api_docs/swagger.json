        "/performances/{performance_id}/seats": {
            "get": {
                "summary": "Seats",
                "description": "return all seats related to a specific performance\n",
                "parameters": [
                    {
                        "name": "performance_id",
                        "in": "path",
                        "description": "performance id",
                        "required": true,
                        "type": "integer",
                        "format": "int32",
                        "x-example": 28677
                    }
                ],
                "tags": [
                    "Performances"
                ],
                "responses": {
