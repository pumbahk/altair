        "/performances/{performance_id}/seats/reserve": {
            "post": {
                "summary": "reserve Seats",
                "description": "reserve a specific seats\n",
                "parameters": [
                    {
                        "name": "performance_id",
                        "in": "path",
                        "description": "performance id",
                        "required": true,
                        "type": "integer",
                        "format": "int32",
                        "x-example": 28677
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "description": "reserve type",
                        "schema": {
                            "required": [
                                "reserve_type"
                            ],
                            "properties": {
                                "reserve_type": {
                                    "type": "string"
                                },
                                "selected_seats": {
                                    "description": "only required when reserve_type is 'seat_choice'",
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "auto_select_conditions": {
                                    "description": "only required when reserve_type is 'auto'",
                                    "type": "object",
                                    "properties": {
                                        "stock_type_id": {
                                            "type": "integer"
                                        },
                                        "quantity": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                ],
                "tags": [
                    "Performances"
                ],
                "responses": {
                    "200": {
                        "description": "reserve seats",
                        "schema": {
                            "properties": {
                                "results": {
                                    "type": "object",
                                    "description": "status以外はOK,NG及びreserve_typeによってレスポンスの形が違う",
                                    "required": [
                                        "status"
                                    ],
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "reserve_type": {
                                            "type": "string"
                                        },
                                        "stock_type_id": {
                                            "type": "integer"
                                        },
                                        "quantity": {
                                            "type": "integer"
                                        },
                                        "is_quantity_only": {
                                            "type": "boolean"
                                        },
                                        "is_separeted": {
                                            "type": "boolean"
                                        },
                                        "seats": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "reason": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/performances/{performance_id}/seats/release": {
            "post": {
                "summary": "release Seats",
                "description": "release seat reservation from session\n",
                "parameters": [
                    {
                        "name": "performance_id",
                        "in": "path",
                        "description": "performance id",
                        "required": true,
                        "type": "integer",
                        "format": "int32",
                        "x-example": 28677
                    }
                ],
                "tags": [
                    "Performances"
                ],
                "responses": {
                    "200": {
                        "description": "release seats",
                        "schema": {
                            "properties": {
                                "results": {
                                    "type": "object",
                                    "description": "status以外はOK,NG及びreserve_typeによってレスポンスの形が違う",
                                    "required": [
                                        "status"
                                    ],
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "stock_type_id": {
                                            "type": "integer"
                                        },
                                        "quantity": {
                                            "type": "integer"
                                        },
                                        "is_quantity_only": {
                                            "type": "boolean"
                                        },
                                        "seats": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "reason": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "PerformanceResource": {
